@model WebUI.Areas.Admin.Models.TopicViewModel

@{
    ViewData["Title"] = "Tài liệu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
<link href="~/lib/select2-bootstrap4-theme/select2-bootstrap4.min.css" rel="stylesheet" />
<link href="~/lib/summernote/summernote-bs4.css" rel="stylesheet" />
<link href="~/lib/icheck-bootstrap/icheck-bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/toastr/toastr.css" rel="stylesheet" />
<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TopicId" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="Attachments" />
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="Number" class="control-label"></label>
                        <input asp-for="Number" class="form-control" required />
                        <span asp-validation-for="Number" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content" class="control-label"></label>
                        <textarea asp-for="Content" class="form-control"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Tác giả</label>
                        <select class="form-control" name="Authorids" id="AuthorIds" asp-items="ViewBag.Authors" multiple="multiple">
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Ngày xuất bản</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                            </div>
                            <input name="PublishDate" id="PublishDate" value="@Model.PublishDate?.ToString("yyyy-MM-dd")" class="form-control" type="date">
                        </div>
                        <span asp-validation-for="PublishDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Danh mục</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Đơn vị</label>
                        <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Departments"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Loại văn bản</label>
                        <select asp-for="TopicType" class="form-control">
                            @foreach (var value in ApplicationCore.Helper.EnumHelper<ApplicationCore.Entities.TopicType>.GetValues(ApplicationCore.Entities.TopicType.Posts))
                            {
                                var description = ApplicationCore.Helper.EnumHelper<ApplicationCore.Entities.TopicType>.GetDisplayValue(value);
                                <option value="@value">@Html.DisplayFor(e => description)</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tags" class="control-label"></label>
                        <input asp-for="Tags" class="form-control" placeholder="Mỗi từ khóa cách nhau bởi dấu ," />
                        <span asp-validation-for="Tags" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Tệp tin đính kèm</label><br />
                        @if (Model.Attachments != null && Model.Attachments?.Length > 7)
                        {
                            foreach (var item in Model.Attachments?.Split(","))
                            {
                                <div class="py-2" id="@item?.Substring(0,7)">
                                    <i class="fa fa-file"></i> @item
                                    <a href="#" class="text-danger" onclick="RemoveFile('@item')"><i class="fa fa-times"></i></a>
                                </div>
                            }
                        }
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="attachmentFiles" name="attachmentFiles" multiple="multiple">
                                <label class="custom-file-label">Chọn file</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Cập nhật" class="btn btn-primary" />
                        @if (string.IsNullOrEmpty(ViewBag.UrlBack))
                        {
                            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                        }
                        else
                        {
                            <a href="@ViewBag.UrlBack" class="btn btn-secondary">Quay lại</a>
                        }
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/bootbox.js"></script>
    <script src="~/lib/inputmask/min/jquery.inputmask.bundle.min.js"></script>
    <script src="~/lib/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script src="~/lib/summernote/summernote-bs4.js"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script>
        $(function () {
            // Summernote
            $('#Content').summernote()

            //Initialize Select2 Elements
            $('#AuthorIds').select2({
                theme: 'bootstrap4'
            })
        });

        $(document).ready(function () {
            bsCustomFileInput.init();
        });

        function RemoveFile(fileName) {
            let strFileName = '#' + fileName.substring(0, 7);
            bootbox.confirm("Xác nhận xóa", function (result) {
                if (result) {
                    $.ajax({
                        url: '/admin/topics/RemoveFile',
                        type: 'POST',
                        dataType: 'html',
                        data: {
                            file: fileName,
                            id: @Model.TopicId,
                        }
                    }).done(function (response) {
                        if (response) {
                            $(strFileName).remove();
                            $('#Attachments').val($('#Attachments').val().replace(fileName, ''));
                            toastr["success"]("Xóa file thành công!");
                        }
                        else {
                            toastr["error"]("Xóa file thất bại!");
                        }
                    });
                }
            });
        };

    </script>
}