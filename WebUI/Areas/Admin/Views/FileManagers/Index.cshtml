
@{
    ViewData["Title"] = "Quản lý file";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title"><i class="fab fa-react"></i> @ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <table class="table table-bordered mb-3 dataTable">
            <thead>
                <tr>
                    <th>
                        Thư mục
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in (string[])ViewBag.Directories)
                {
                    <tr>
                        <td class="font-weight-bold">
                            @item.Substring(item.LastIndexOf('\\') + 1)
                        </td>
                        <td>
                            <a href="#" class="btn btn-info btn-sm"><i class="fa fa-folder"></i> Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

