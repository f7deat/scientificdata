@model ApplicationCore.Entities.Author

@{
    ViewData["Title"] = "Hồ sơ tác giả";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle"
                                 src="~/img/profile/@Model.Avatar"
                                 alt="User profile picture">
                        </div>

                        <h3 class="profile-username text-center">@Model.Name</h3>

                        <p class="text-muted text-center">@Model.DateOfBirth</p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Tài liệu</b> <a class="float-right">@ViewBag.Topics?.Count</a>
                            </li>
                        </ul>

                        <a href="/admin/authors/edit/@Model.AuthorId" class="btn btn-primary btn-block"><b>Chỉnh sửa</b></a>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- About Me Box -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <strong><i class="fas fa-map-marker-alt mr-1"></i> Địa chỉ</strong>

                        <p class="text-muted">@Model.Location</p>
                        <hr />
                        <strong><i class="fas fa-map-marker-alt mr-1"></i> Ngày sinh</strong>

                        <p class="text-muted">@Model.DateOfBirth</p>
                        <hr />
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a class="nav-link active" href="#timeline" data-toggle="tab">Hoạt động</a></li>
                            <li class="nav-item"><a class="nav-link" href="#activity" data-toggle="tab">Tiểu sử</a></li>
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane" id="activity">
                                <!-- Post -->
                                <div class="post">
                                    @Model.Bio
                                </div>
                                <!-- /.post -->
                                <!-- /.post -->
                            </div>
                            <!-- /.tab-pane -->
                            <div class="tab-pane active" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline item -->
                                    <div>
                                        <i class="fas fa-pen-alt bg-primary"></i>

                                        @foreach (var item in ViewBag.Topics)
                                        {
                                            <div class="timeline-item mb-3">
                                                <span class="time"><i class="far fa-clock"></i> Ngày cập nhật: @item.Topic.ModifiedDate</span>

                                                <h3 class="timeline-header"><a href="/admin/topics/details/@item.TopicId">@item.Topic.Name</a></h3>

                                                <div class="timeline-body">
                                                    @item.Topic.Description
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="/admin/topics/details/@item.TopicId" class="btn btn-primary btn-sm">Xem thêm</a>
                                                    <a href="/admin/topics/edit/@item.TopicId" class="btn btn-info btn-sm">Chỉnh sửa</a>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <!-- END timeline item -->
                                    <div>
                                        <i class="far fa-clock bg-gray"></i>
                                    </div>
                                </div>
                            </div>
                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
